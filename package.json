{
  "name": "todo-angular2-ngrx",
  "version": "0.1.0",
  "description": "todo-angular2-ngrx",
  "homepage": "https://github.com/r-park/todo-angular2-ngrx",
  "repository": "https://github.com/r-park/todo-angular2-ngrx.git",
  "author": {
    "name": "Richard Park",
    "email": "objectiv@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=4.2"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --display-chunks --display-modules --progress",
    "clean": "del-cli ./target",
    "lint": "npm-run-all lint:js lint:ts",
    "lint:js": "eslint -c .eslintrc.yml *.js ./server",
    "lint:ts": "tslint './src/**/*.ts'",
    "prebuild": "npm-run-all clean lint:ts",
    "server:api": "cross-env NODE_ENV=development nodemon -w 'server/*.js' ./server/server.js",
    "server:dev": "cross-env NODE_ENV=development webpack-dev-server --progress",
    "start": "npm run server:api & npm run server:dev",
    "test": "cross-env NODE_ENV=test karma start --single-run",
    "test:watch": "cross-env NODE_ENV=test karma start"
  },
  "dependencies": {
    "@ngrx/store": "~1.2.1",
    "angular2": "2.0.0-beta.1",
    "es6-shim": "~0.33.13",
    "rxjs": "5.0.0-beta.0"
  },
  "devDependencies": {
    "autoprefixer": "~6.3.6",
    "body-parser": "~1.14.2",
    "browser-sync": "~2.11.1",
    "connect-history-api-fallback": "~1.1.0",
    "cross-env": "~1.0.7",
    "css-loader": "~0.23.1",
    "del-cli": "^0.2.0",
    "eslint": "~2.10.0",
    "express": "~4.13.3",
    "extract-text-webpack-plugin": "~1.0.1",
    "html-webpack-plugin": "~2.16.1",
    "jasmine-core": "~2.4.1",
    "karma": "~0.13.19",
    "karma-chrome-launcher": "~0.2.2",
    "karma-jasmine": "~0.3.6",
    "karma-sourcemap-loader": "~0.3.7",
    "karma-webpack": "~1.7.0",
    "lowdb": "~0.12.1",
    "minx": "~0.4.14",
    "morgan": "~1.6.1",
    "node-sass": "~3.4.2",
    "node-uuid": "~1.4.7",
    "nodemon": "~1.9.2",
    "npm-run-all": "~2.1.0",
    "postcss-loader": "~0.9.1",
    "raw-loader": "~0.5.1",
    "reflect-metadata": "0.1.2",
    "sass-loader": "~3.1.2",
    "style-loader": "~0.13.0",
    "ts-loader": "~0.7.2",
    "tslint": "~3.10.1",
    "typescript": "~1.7.5",
    "webpack": "~1.13.0",
    "webpack-dev-server": "~1.14.1",
    "zone.js": "0.5.10"
  }
}
